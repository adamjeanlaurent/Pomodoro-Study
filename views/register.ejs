  <h1>Register</h1>
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/users/register" method="POST">
            <div class="form-group">
              <label for="username">Email</label>
              <input type="text" class="form-control" name="username" value="<%= typeof name != 'undefined' ? name : '' %>" autocomplete = "off">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password"  value="<%= typeof password != 'undefined' ? password : '' %>" autocomplete = "off">
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
          </form>

        </div>
      </div>
    </div>

